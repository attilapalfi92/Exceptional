<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.attilapalfi.exceptional.ui.main.friends_page.FriendDetailsActivity">

    <TextView android:text="@string/hello_world"
        android:id="@+id/best_text_view"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <fragment
        android:name="com.attilapalfi.exceptional.ui.main.ExceptionsFragment2"
        android:id="@+id/friend_details_exceptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_exceptions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/best_text_view" />

</RelativeLayout>
