<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.attilapalf.exceptional.ui.exceptionSending.FriendChooserActivity">

    <TextView android:text="@string/choose_victim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullExcetpionNameText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff0000"
        android:textSize="20dp"
        android:layout_marginBottom="10dp" />

    <ListView
        android:id="@+id/send_friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#ff000000"
        android:dividerHeight="1dp"
        android:layout_below="@+id/fullExcetpionNameText">
    </ListView>

</RelativeLayout>
