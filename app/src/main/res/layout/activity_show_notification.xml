<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.attilapalf.exceptional.ui.ShowNotificationActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/fullExcetpionNameText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/exceptionDescriptionText"
        android:layout_alignEnd="@+id/exceptionDescriptionText"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/exceptionDescriptionText"
        android:layout_below="@+id/fullExcetpionNameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/exceptionSenderImage"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/exceptionDescriptionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/senderNameText"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignBottom="@+id/exceptionSenderImage"
        android:layout_alignRight="@+id/exceptionDescriptionText"
        android:layout_alignEnd="@+id/exceptionDescriptionText"
        android:layout_toRightOf="@+id/exceptionSenderImage"
        android:layout_toEndOf="@+id/exceptionSenderImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/senderPositionText"
        android:layout_below="@+id/exceptionSenderImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/sendDateText"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/senderPositionText"
        android:layout_alignLeft="@+id/senderPositionText"
        android:layout_alignStart="@+id/senderPositionText" />
</RelativeLayout>
