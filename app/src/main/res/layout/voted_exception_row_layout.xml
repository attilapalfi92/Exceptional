<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="4dp" >

    <!--android:longClickable="true"-->
    <!--android:focusable="true"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contextClickable="false">

        <TextView
            android:id="@+id/voted_vote_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="end"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            android:text="Votes: 20"/>

        <TextView
            android:id="@+id/voted_short_name_text"
            android:text="SikertelenCsirkeszarExceptionBaszás"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@id/voted_vote_count"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:gravity="center"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/voted_full_name_text"
            android:text="com.\nattilapalfi.\nexceptional.\nSikertelenCsirkeszarException"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#548600"
            android:singleLine="false"
            android:layout_below="@+id/voted_short_name_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/voted_description_text"
            android:text="Exception description bla bla bla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:layout_below="@+id/voted_full_name_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#e3002b4c" />

        <TextView
            android:id="@+id/voted_submitter_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voted_description_text"
            android:text="Submitter: Lajos Kásbár" />

    </RelativeLayout>

</android.support.v7.widget.CardView>