<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/friend_row_2">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/friendImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Large Text"
        android:id="@+id/friendNameView"
        android:layout_toRightOf="@+id/friendImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/friendPointsView"
        android:text="small text"
        android:layout_alignBottom="@+id/friendImageView"
        android:layout_toRightOf="@+id/friendImageView"
        android:layout_alignRight="@+id/friendNameView"
        android:layout_alignEnd="@+id/friendNameView"
        android:layout_marginLeft="10dp" />

</RelativeLayout>