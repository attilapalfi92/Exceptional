<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:longClickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/friendImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/friendNameView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Camila Fogarassy"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:textColor="#222"
            android:textSize="20sp"
            android:layout_alignTop="@+id/friendImageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/friendImageView"
            android:layout_toEndOf="@+id/friendImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Points: 1000"
            android:id="@+id/friendPointsView"
            android:layout_below="@+id/friendNameView"
            android:layout_toRightOf="@+id/friendImageView"
            android:layout_toEndOf="@+id/friendImageView"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:textSize="15sp"
            android:textColor="#222"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/friendImageView" />

    </RelativeLayout>


</android.support.v7.widget.CardView>